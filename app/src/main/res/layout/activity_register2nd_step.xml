<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="wolverine.example.com.btp_scientist.Register2ndStep">

    <TextView
        android:id="@+id/hello_name"
        android:text=""
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="Just one more step to register"/>

        <EditText
            android:id="@+id/district_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your current district"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edittext_top_bg"
            android:textColorHint="#bbbbbb"/>
        <EditText
            android:id="@+id/organisation_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your current organisation"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:background="@drawable/edittext_top_bg"
            android:textColorHint="#bbbbbb"/>

        <EditText
            android:id="@+id/position_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your current position"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="@drawable/edittext_top_bg"
            android:textColorHint="#bbbbbb"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"
            android:text="Finish"
            android:onClick="registerfinish"
            android:padding="10dp"
            android:background="@drawable/button_default_bg"/>

    </LinearLayout>
</RelativeLayout>
