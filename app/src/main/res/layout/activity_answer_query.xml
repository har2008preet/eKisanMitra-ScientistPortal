<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FF0099CC">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="wolverine.example.com.btp_scientist.answer_query">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <TextView
        android:id="@+id/querry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/answer_querry"
        android:layout_width="300dp"
        android:textColorHint="#bbbbbb"
        android:padding="10dp"
        android:hint="Write your Answer here"
        android:background="@drawable/edittext_top_bg"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/querry"
        android:layout_centerHorizontal="true"
        android:drawableLeft="@drawable/ic_action_edit"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/answer_querry"
        android:background="@drawable/button_default_bg"
        android:text="Submit"
        android:layout_marginTop="40dp"
        android:onClick="answerit"
        android:layout_gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
</ScrollView>